#!/bin/sh
# add wifi entry
if [ $# -lt 2 ]; then
    echo 'Usage: addwifi "SSID" "PASSWORD"' 
    exit
fi

SSID="$1"
PASS="$2"

case $(uname) in
    Linux)
        WPA_FILE="/etc/wpa_supplicant/wpa_supplicant.conf"
        ;;
    OpenBSD|FreeBSD)
        WPA_FILE="/etc/wpa_supplicant.conf"
        ;;
esac

wpa_passphrase "$1" "$2" | sudo tee -a "$WPA_FILE"
