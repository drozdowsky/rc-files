#!/bin/sh
#
# Aliases that are POSIX complaint
#
alias h='fc -l'
alias j=jobs
# ask when removing more files
alias cp='cp -ip'
alias mv='mv -i'
alias rm='rm -I'

# main aliases
alias g='git'
alias v='vim'
alias t='tmux'
alias p='python'

# googledrive
alias mgd='google-drive-ocamlfuse ~/google/drive'
alias umgd='fusermount -u ~/google/drive'

# 3rd
alias feh='feh -X -s -Z --scale-down --title "%n [%wx%h][%u/%l]"'
alias ..='cd ..'

case $(uname) in
    Linux)
        alias s='sudo'
        alias doas='sudo'
        alias ls='ls -ahN'
        ;;
    OpenBSD)
        alias d='doas'
        alias sudo='doas'
        alias ls='ls -aF'
        ;;
    FreeBSD)
        # I will switch to doas, I promise
        # but I need that 'persist' feature first.
        alias d='sudo'
        alias doas='sudo'
        alias ls='ls -aGF'
        ;;
    Darwin)
        alias s='sudo'
        alias doas='sudo'
        alias d='sudo'
        alias rm='rm'
        alias ls='ls -AFG'
        ;;
esac

swallow() {
    # run cmd in bg & close term
    nohup "$@" &>/tmp/nohup.out &
    exit
}

frep() {
    # fast find in path
    if [[ -x "$(command -v rg)" ]]; then
        rg "$1" $PWD --line-number
    else
        grep -nr "$1" $PWD
    fi
}

up(){
    # cd ../.. == up 2
    local d=""
    limit=$1

    c=1
    while [[ $c -le $limit ]]
    do
        d=$d/..
        let c=c+1
    done

    d=$(echo $d | sed 's/^\///')
    if [ -z "$d" ]; then
        d=..
    fi

    cd $d
}

workon(){
    VIRTUALENVS_PATH=${WORKON_HOME:-~/.virtualenvs}
    if [ $# -eq 0 ]; then
        ls "$VIRTUALENVS_PATH"
    else
        . "$VIRTUALENVS_PATH/$1/bin/activate"
        if [ -f "$VIRTUALENVS_PATH/$1/bin/post_activate" ]; then
            . "$VIRTUALENVS_PATH/$1/bin/post_activate"
        fi
    fi
}

branch() {
    git branch --all | fzf | grep -Eo "[^ *]+"
}
