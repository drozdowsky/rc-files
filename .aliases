alias enit='trans -s en -t it' 
alias proxy="export http_proxy=http://10.158.100.120:8080; export https_proxy=http://10.158.100.120:8080"

re() {
    nohup "$@"&
    exit
}

# Find in path 
fip() {
	grep "$1" $pwd --line-number
}

up(){
    local d=""
    limit=$1

    c=1
    while [[ $c -le $limit ]]
    do
        d=$d/..
        let c=c+1
    done

    d=$(echo $d | sed 's/^\///')
    if [ -z "$d" ]; then
        d=..
    fi

    cd $d
}
